    "test:node": "jest --coverage",
    "test:browser": "jest --config=./jest.config.browser.js --coverage",
    "build": "rm -r -f ./dist &&  tsc",
    "release": "yarn build && np"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "np": "^9.2.0",
